<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.QuizPickerFragment">

    <TextView
        android:id="@+id/quizPickerTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PICK A QUIZ MODE"
        android:textColor="@color/new_on_background"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/quizPickerStartSimple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="standard"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/quizPickerTextView1"
        app:layout_constraintLeft_toLeftOf="@id/quizPickerStartWriting"
        app:layout_constraintRight_toRightOf="@id/quizPickerStartWriting"
        />

    <Button
        android:id="@+id/quizPickerStartTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time challange"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/quizPickerStartSimple"
        app:layout_constraintLeft_toLeftOf="@id/quizPickerStartWriting"
        app:layout_constraintRight_toRightOf="@id/quizPickerStartWriting"
        />

    <Button
        android:id="@+id/quizPickerStartWriting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="writing challange"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/quizPickerStartTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/quizSimpleToFewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_simple_too_few_question"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/new_on_background"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/quizPickerTextView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>