<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/new_primary</item>
        <item name="colorPrimaryVariant">@color/new_primary_variant</item>
        <item name="colorOnPrimary">@color/new_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_secondary</item>
        <item name="colorSecondaryVariant">@color/new_secondary</item>
        <item name="colorOnSecondary">@color/new_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/new_background</item>
        <!-- Customize your theme here. -->
    </style>


